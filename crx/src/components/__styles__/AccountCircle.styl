@require "../../components/__styles__/variables"

.account-preview
  width 24px
  height 24px
  border-radius 50%
  overflow hidden
  border solid 1px $white

  &.thick-border
    border solid 7px rgba(255, 255, 255, 0.3)
    box-shadow 0 24px 16px 0 rgba(0, 0, 0, 0.24)

.photo
  min-width 100%
  min-height 100%
  max-width 100%
  max-height 100%
  background-color rgb(255, 255, 255)