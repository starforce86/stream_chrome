@import "../../components/__styles__/variables.styl"
@import "../../components/__styles__/common.styl"

.header
  flex 0 0 auto
  height 80px
  font-family $work-sans
  display flex
  justify-content center
  align-items center
  width 100%
  background-image $gradient

  &.large
    height 192px
    background-image none

.left
  left 24px

.center
  align-self center

.right
  right 24px

.left, .right
  position absolute
  display flex
  justify-content center
  align-items center
  height 100%

.logo
  display block
  background-image $logo
  background-size 22px 32px
  width 22px
  height 32px

.logo-large
  display block
  margin-top 40px
  background-image $logo-full
  background-size 109px 121px
  width 109px
  height 121px

.account
  display block
  background-image $account-circle
  background-size 20px 24px
  width 20px
  height 24px
  opacity 0.5
  margin-right 23px

.back
  display block
  background-image $back
  background-size 18px 18px
  width 18px
  height 18px

.account, .menu-icon-light
  opacity 0.5

  &:hover
    opacity 1

.logo-text
  display block
  background-image $logo-text
  background-size 90px 24px
  width 90px
  height 24px

.logo-text-container
  width 100%
  padding 0
  background-image $gradient-gray

.logo-text-container, .dropdown-item
  height 56px !important
  display flex
  justify-content center
  align-items center

.dropdown-container
  width 240px
  top -16px !important
  border-radius 0 !important

  .divider
    margin 0 !important

.dropdown-item
  padding-left 24px
  padding-right 16px
  padding-top 8px
  padding-bottom 8px
  justify-content flex-start
  cursor pointer

  &:hover, &:active, &:focus
    background-image $gradient-gray !important

.header-title
  @extend .title
  margin-bottom 42px
  color $white
